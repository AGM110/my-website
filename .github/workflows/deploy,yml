name: Deploy Website

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
    environment:
      name: github-pages
    steps:
      - name: Download Code
        uses: actions/checkout@v4

      - name: Setup GitHub Pages
        uses: actions/configure-pages@v4

      - name: Upload Files
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

      - name: Deploy to Internet
        id: deployment
        uses: actions/deploy-pages@v4